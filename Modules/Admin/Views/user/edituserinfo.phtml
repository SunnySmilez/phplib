<script>
    $(document).ready(function () {
        $('#cancel').click(function () {
            indexUrl = '<?=APP_ADMIN_PATH?>/user/index';
            jumpUrl(indexUrl);
        });

        $('#save').click(function () {
            var uname = $('#uname'), nick = $('#nick'), phone = $('#phone'), email = $('#email'), description = $('#description');
            if (!uname.val().trim()) {
                alert('请填写用户名');
                uname.focus();
                return;
            }
            if (!nick.val().trim()) {
                alert('请填写姓名');
                nick.focus();
                return;
            }
            if (!phone.val().trim()) {
                alert('请填写手机号');
                phone.focus();
                return;
            }
            if (!/^1\d{10}$/.test(phone.val().trim())) {
                alert('请填写正确的手机号');
                phone.focus();
                return;
            }
            if (!email.val().trim()) {
                alert('请填写邮箱');
                email.focus();
                return;
            }
            $.ajax({
                cache: true,
                type: "POST",
                url: url("/user/saveUserInfo/<?php echo isset($uid) ? '?uid=' . $uid : ''; ?>"),
                data: $('#userform').serialize(),
                dataType: 'json',
                error: function (data) {
                    alert('系统异常，请稍后再试！');
                },
                success: function (data) {
                    alert(data.msg);
                    if (data.retcode == 2000000) {
                        refresh();
                    }
                }
            });
        });

