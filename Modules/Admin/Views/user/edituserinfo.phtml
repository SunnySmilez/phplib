    // 检查用户名是否存在
    function checkName(value) {
        if ('<?php echo $uname; ?>' == value) return;
        $.get(url("/user/checkNameExist"), {
                name: value
            },
            function (data) {
                if (data.retcode == 2000000) {
                    $('#anamecheck').html('');
                } else {
                    $('#anamecheck').html('用户已存在');
                }
            }, "json");
    }

    var config = {
